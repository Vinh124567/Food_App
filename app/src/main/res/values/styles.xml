<resources>
    <style name="RoundImage" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="shapeAppearance">@style/RoundImageAppearance</item>
    </style>

    <style name="RoundImageAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

        <style name="roundedCorners">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSizeTopLeft">16dp</item>
            <item name="cornerSizeTopRight">16dp</item>
            <item name="cornerSizeBottomLeft">0dp</item>
            <item name="cornerSizeBottomRight">0dp</item>
        </style>

    <style name="CircularShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>


        <style name="roundedImageView">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">50%</item>
        </style>


</resources>
