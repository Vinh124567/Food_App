<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.Fragment.Singup_Activity"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/back_icon"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:textSize="20dp"
                android:text="Address"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="56dp"
                android:text="Make sure it's valid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone No."
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="17dp"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:id="@+id/edtPhone"
            android:layout_gravity="center"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:hint="Type your phone number"
            android:padding="10dp"
            android:textColorHint="@color/silver"
            android:background="@drawable/border"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="17dp"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:id="@+id/edtAddress"
            android:layout_gravity="center"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:hint="Type your adderss"
            android:padding="10dp"
            android:textColorHint="@color/silver"
            android:background="@drawable/border"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="House No."
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="17dp"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:id="@+id/edtHouse"
            android:layout_gravity="center"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:hint="Type your house number"
            android:padding="10dp"
            android:textColorHint="@color/silver"
            android:background="@drawable/border"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="17dp"
            android:layout_marginBottom="10dp"
            />
        <Spinner
            android:id="@+id/spinnerAddress"
            android:layout_gravity="center"
            android:layout_width="400dp"
            android:background="@drawable/border"
            android:layout_height="40dp" />


        <Button
            android:id="@+id/btnSignUpNow"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:inputType="text|textEmailAddress"
            android:layout_marginEnd="46dp"
            android:background="@drawable/button_login"
            android:text="Sign Up Now"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_marginStart="100dp"
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="20dp"
                android:text="I already have an acccount"
                android:textSize="17dp"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="20dp"
                android:text=" Login"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/orange"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
        <ProgressBar
            android:id="@+id/paginationProgressBar"
            style="?attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/red_progressbar"
            android:visibility="invisible"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</ScrollView>